{% extends 'base.html.twig' %}

{% form_theme form "bootstrap_5_layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">

            <div class="col-md-6">
                <h3>Modifie ton commentaire</h3>
                <hr>
                <br>
                {{ form_start(form) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control mb-3'}}) }}
                    <button type="submit" class="btn btn-success">Edit</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
